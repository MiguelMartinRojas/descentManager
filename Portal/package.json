{
  "version": "1.0.0",
  "name": "Descent.Web.portal",
  "private": true,
  "scripts": {
    "build": "npm run build:jit && npm run build:aot && npm run sass:build && npm run copy:libs",
    "build:jit": "npm run ts && npm run copy:assets",
    "build:jit:watch": "concurrently \"npm run ts:watch\" \"npm run copy:assets:watch\"",
    "ts": "tsc -p tsScripts/",
    "ts:watch": "tsc -p tsScripts/ -w",
    "copy:assets": "cpx \"tsScripts/**/*.{html,css}\" Scripts/dist/jit",
    "copy:assets:watch": "cpx \"tsScripts/**/*.{html,css}\" Scripts/dist/jit -w",
    "sass:build": "npm run sass:app && npm run sass:theme",
    "sass:app": "node-sass Content/site.scss Content/dist/site.css",
    "sass:theme": "node-sass Content/theme.scss Content/dist/theme.css",
    "sass:watch": "nodemon Content -e scss -x \"npm run sass:build\"",
    "lint": "tslint ./tsScripts/**/*.ts -t verbose",
    "build:aot": "ngc -p tsconfig-aot.json && rollup -c rollup-config.js",
    "copy:libs": "npm run copy:libs:corejs && npm run copy:libs:zonejs && npm run copy:libs:systemjs && npm run copy:libs:webanimationjs && npm run copy:libs:smoothscroll-polyfill && npm run copy:libs:hammerjs",
    "copy:libs:corejs": "cpx node_modules/core-js/client/shim.min.js Scripts/libs",
    "copy:libs:zonejs": "cpx node_modules/zone.js/dist/zone.js Scripts/libs",
    "copy:libs:systemjs": "cpx node_modules/systemjs/dist/system.src.js Scripts/libs",
    "copy:libs:webanimationjs": "cpx node_modules/web-animations-js/web-animations.min.js Scripts/libs",
    "copy:libs:smoothscroll-polyfill": "cpx node_modules/smoothscroll-polyfill/dist/smoothscroll.js Scripts/libs",
    "copy:libs:hammerjs": "cpx node_modules/hammerjs/hammer.min.js Scripts/libs"
  },
  "dependencies": {
    "@angular/animations": "~4.2.4",
    "@angular/common": "~4.2.4",
    "@angular/compiler": "~4.2.4",
    "@angular/core": "~4.2.4",
    "@angular/flex-layout": "^2.0.0-beta.7",
    "@angular/forms": "~4.2.4",
    "@angular/http": "~4.2.4",
    "@angular/material": "2.0.0-beta.6",
    "@angular/platform-browser": "~4.2.4",
    "@angular/platform-browser-dynamic": "~4.2.4",
    "@angular/platform-server": "~4.2.4",
    "@angular/router": "~4.2.4",
    "@types/gapi.auth2": "0.0.40",
    "core-js": "^2.4.1",
    "hammerjs": "^2.0.8",
    "rxjs": "5.3.0",
    "smoothscroll-polyfill": "^0.3.5",
    "systemjs": "0.20.11",
    "web-animations-js": "^2.2.5",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@angular/compiler-cli": "~4.2.4",
    "@types/hammerjs": "^2.0.34",
    "@types/jasmine": "2.5.47",
    "@types/node": "^7.0.12",
    "canonical-path": "0.0.2",
    "codelyzer": "3.1.2",
    "concurrently": "^3.2.0",
    "cpx": "^1.5.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "source-map-explorer": "^1.3.3",
    "tslint": "^5.0.0",
    "typescript": "2.3.4"
  }
}
